<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs')%>

    <%  if (blogs.length > 0) {%>
        <% blogs.forEach( blog => { %>
            <h3 class="title"><%= blog.title %></h3>
            <p class="snippet"> <%= blog.snippet %></p>
